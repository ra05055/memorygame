<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ff000000">


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:columnCount="3"
        android:rowCount="6"
        android:background="@drawable/dragon"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/Imagen1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:src="@drawable/fondo" />

        <ImageView
            android:id="@+id/Imagen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:src="@drawable/fondo" />

        <ImageView
            android:id="@+id/Imagen3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:src="@drawable/fondo" />

        <ImageView
            android:id="@+id/Imagen4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:src="@drawable/fondo" />

        <ImageView
            android:id="@+id/Imagen5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:src="@drawable/fondo" />

        <ImageView
            android:id="@+id/Imagen6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:src="@drawable/fondo" />

        <ImageView
            android:id="@+id/Imagen7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:src="@drawable/fondo" />

        <ImageView
            android:id="@+id/Imagen8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:src="@drawable/fondo" />

        <ImageView
            android:id="@+id/Imagen9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:src="@drawable/fondo" />

        <ImageView
            android:id="@+id/Imagen10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:src="@drawable/fondo" />

        <ImageView
            android:id="@+id/Imagen11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:src="@drawable/fondo" />


        <ImageView
            android:id="@+id/Imagen12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:src="@drawable/fondo" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:onClick="aJugar"
            android:src="@drawable/botontrue" />

        <ImageView
            android:id="@+id/imageViewSalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="5"
            android:onClick="msgAlerta"
            android:src="@drawable/botonsalir" />


        <TextView
            android:id="@+id/TextContador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"

            android:layout_gravity="center_horizontal"
            android:layout_row="4"

            android:gravity="center"
            android:text="60"
            android:textColor="#fff"
            android:textSize="20sp" />

    </GridLayout>


</LinearLayout>
